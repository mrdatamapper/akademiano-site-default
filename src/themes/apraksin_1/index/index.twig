<!doctype html>
<html lang="{{ html.lang|default("ru") }}" class="h-100">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {{ asset_css([
        ["font-awesome/css/fontawesome.min.css", {"class":"holderjs"}],
        ["font-awesome/css/all.min.css", {"class":"holderjs"}],
        "simple-line-icons/css/simple-line-icons.css",
        "bootstrap/dist/css/bootstrap.min.css",
        "coreui/dist/css/coreui.min.css",
        "assets/css/apraksin_1.css"
    ], default, true) }}


    {% block css %}
    {% endblock css %}

    {# counters #}

    <title>{{ pageTitle | default('2dent.tech') }}</title>
    {% if pageDescription %}
        {# <meta name="description" content="{{ pageDescription }}"/> #}
    {% endif %}
</head>



